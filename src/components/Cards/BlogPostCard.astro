---
import { formatDate, readingTime } from '../../lib/helpers';
import Card from '../Card.astro';
import CardCta from '../Card/CardCta.astro';
import CardDescription from '../Card/CardDescription.astro';
import CardEyebrow from '../Card/CardEyebrow.astro';
import CardTitle from '../Card/CardTitle.astro';

const props = Astro.props;

const post = props.post;
---

<Card class="text-xl leading-8">
  <CardTitle href={`/blog/${post.slug}`}>
    {post.data.title}
  </CardTitle>
  <CardEyebrow class="" as="time" dateTime={post.pubDate} decorate>
    {formatDate(post.data.pubDate)}&nbsp; <svg
      role="img"
      xmlns="http://www.w3.org/2000/svg"
      width="16px"
      height="16px"
      viewBox="0 0 24 24"
      stroke="rgb(20 184 166)"
      stroke-width="1.5"
      stroke-linecap="square"
      strokeline-join="miter"
      fill="none"
      color="rgb(20 184 166)"
    >
      {' '}
      <circle cx="12" cy="13" r="8"></circle>
      <path d="M12 9L12 13M18 7L20 5M15 2L9 2"></path>{' '}
    </svg> &nbsp;
    {readingTime(post.body)} min read
  </CardEyebrow>
  <CardDescription>{post.data.description}</CardDescription>
  <CardCta>Read post</CardCta>
</Card>
