---
interface LinkProps {
  href: string;
  class?: string;
  icon?: any;
}

const { href, class: className, icon: Icon } = Astro.props as LinkProps;
---

<a href={href} class:list={['group -m-1 p-1', className]} {...Astro.props}>
  <Icon
    class="h-6 w-6 fill-zinc-500 transition group-hover:fill-zinc-600 dark:fill-zinc-400 dark:group-hover:fill-zinc-300"
  />
</a>
