---
interface Props {
  path: string;
  label: string;
  isActive: boolean;
}

const { path, label, isActive } = Astro.props;

const className = isActive
  ? 'bg-slate-50 text-emerald-800 shadow-sm shadow-emerald-100/50 ring-1 ring-slate-900/5 dark:text-emerald-200 dark:bg-slate-950 dark:shadow-emerald-900/50 dark: ring-slate-100/5'
  : 'bg-white text-slate-700 duration-200 ease-in-out hover:bg-slate-50/95 dark:bg-slate-950 dark:text-slate-300 dark:hover:bg-slate-950/95';
---

<li>
  <a
    href={path}
    class:list={[
      'inline-block rounded-full px-5 py-1.5 text-md font-medium transition',
      className,
    ]}
  >
    {label}
  </a>
</li>
