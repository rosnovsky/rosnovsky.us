        items.map((item) => (
          <div class="break-inside-avoid-column rounded-xl bg-slate-50/75 p-7 shadow-sm shadow-emerald-100/50 ring-1 ring-slate-900/5 lg:p-10">
            <div class="flex items-center gap-2 text-md text-slate-600">
              <Icon name={item.icon} class="h-4 w-4 text-slate-500" />

              {item.category}
            </div>
            <h3 class="mt-6 font-display text-lg font-medium text-slate-900 lg:text-xl">
              {item.title}
            </h3>
            <div class="mt-9 space-y-1">
              <a
                href={item.link.href}
                class="group flex items-center gap-2 text-md font-medium text-emerald-600 duration-200 ease-in-out hover:text-emerald-700"
              >
