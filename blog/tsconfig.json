{
  "compilerOptions": {
    "declarationDir": ".",
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "strict": true,
    // "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "downlevelIteration": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "/index.d.ts",
    "**/*.tsx"
  ]
}
