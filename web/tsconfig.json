{
  "compilerOptions": {
    "target": "es2021",
    "module": "esnext",
    "jsx": "preserve",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "components/*"
      ],
      "@styles/*": [
        "styles/*"
      ],
      "@pages/*": [
        "pages/*"
      ],
      "@lib/*": [
        "lib/*"
      ],
      "@api/*": [
        "api/*"
      ],
      "@layouts/*": [
        "layouts/*"
      ],
      "@images/*": [
        "public/static/images/*"
      ],
      "@flexui/*": [
        "public/flex-ui-assets/*"
      ],
    },
    "incremental": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "scripts"
  ],
  "include": [
    "/index.d.ts",
    "**/*.tsx",
    "**/*.ts",
    "stories/**/*.stories.tsx"
, "../__mocks__/setupTests.ts"  ]
}
