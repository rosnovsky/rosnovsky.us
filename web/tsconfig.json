{
  "compilerOptions": {
    "alwaysStrict": true,
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "lib": [
      "ESNext"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "types": [
      "cypress",
      "@testing-library/cypress"
    ],
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "components/*"
      ],
      "@styles/*": [
        "styles/*"
      ],
      "@pages/*": [
        "pages/*"
      ],
      "@lib/*": [
        "lib/*"
      ],
      "@api/*": [
        "pages/api/*"
      ],
      "@layouts/*": [
        "layouts/*"
      ],
      "@images/*": [
        "public/static/images/*"
      ],
      "@flexui/*": [
        "public/flex-ui-assets/*"
      ]
    },
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "scripts"
  ],
  "include": [
    "/index.d.ts",
    "**/*.tsx",
    "**/*.ts",
    "stories/**/*.stories.tsx",
    "../__mocks__/setupTests.ts"
  ]
}
